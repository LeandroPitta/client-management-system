{
  "name": "client-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Client Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node src/database/init.js",
    "db:seed": "node src/database/seed.js",
    "db:seed:clear": "node src/database/seed.js --clear",
    "db:reset": "node -e \"require('./src/database/init').resetDatabase().then(() => process.exit(0)).catch(e => {console.error(e); process.exit(1);})\"",
    "db:setup": "npm run db:init && npm run db:seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["client-management", "api", "express", "sqlite"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
